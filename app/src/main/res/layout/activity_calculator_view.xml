<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorView">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="196dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/FirstNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter First Number"
            android:inputType="phone"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/SecondNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter second number"
            android:inputType="phone"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/AnswerNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Answer"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="411dp"
        android:layout_height="405dp"
        app:columnCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:rowCount="5">

        <Button
            android:id="@+id/ClearButton"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="C"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/SquareRoot"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Sq Root"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/PercentageButton"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="%"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/SingleCalculations"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Single Calculations"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="0" />

        <Button
            android:id="@+id/CubeRoot"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Cube Root"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/PowerButton"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Power"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/ButtonLog"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Log"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/DivideButton"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="/"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="1" />

        <Button
            android:id="@+id/ButtonLogTen"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Log(10)"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/ExponentialPower"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="e^(x)"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/ButtonInverseTrigno"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Set Inverse Trignometery"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/MultipleButton"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="x"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="2" />

        <Button
            android:id="@+id/ButtonSin"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Sin"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="3" />

        <Button
            android:id="@+id/ButtonCos"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Cos"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="3" />

        <Button
            android:id="@+id/ButtonTan"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Tan"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="3" />

        <Button
            android:id="@+id/SubtractButton"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="-"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="3" />

        <Button
            android:id="@+id/ButtonCot"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Cot"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="4" />

        <Button
            android:id="@+id/ButtonSec"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Sec"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="4" />

        <Button
            android:id="@+id/ButtonCosec"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="Cosec"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="4" />

        <Button
            android:id="@+id/ButtonPlus"
            android:layout_width="103dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:text="+"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_gravity="center"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>